<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/tile_container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/border_2"
            android:layout_marginTop="@dimen/border_2" />

        <TextView
            android:id="@+id/notifications_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/border_2"
            android:layout_marginTop="@dimen/border_2"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_3" />

        <TextView
            android:id="@+id/tile_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/border_2"
            android:layout_marginRight="@dimen/border_2"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_3" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tile_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/border_2"
        android:layout_marginRight="@dimen/border_2"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_3"
        android:visibility="gone" />

</merge>