<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/border_2">

    <TextView
        android:id="@+id/spotlight_live_tile_1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/border_2"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check your favorite events..."
        android:textColor="#FFFFFF"
        android:textSize="@dimen/text_3" />

</LinearLayout>