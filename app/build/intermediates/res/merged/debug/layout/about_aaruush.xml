<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.webarch.aaruush13.tiles.about.ResizableImageView
            android:id="@+id/about_aaruush_image_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/about_aaruush_1" />

        <TextView
            android:id="@+id/about_aaruush_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_aaruush_image_1"
            android:layout_marginBottom="@dimen/border_1"
            android:layout_marginTop="@dimen/border_2"
            android:textColor="#000000"
            android:textSize="@dimen/text_3"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/about_aaruush_text_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_aaruush_text_1"
            android:layout_marginBottom="@dimen/border_2"
            android:textColor="#000000"
            android:textSize="@dimen/text_3" />

        <com.webarch.aaruush13.tiles.about.ResizableImageView
            android:id="@+id/about_aaruush_image_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_aaruush_text_2"
            android:src="@drawable/about_aaruush_2" />

    </RelativeLayout>

</ScrollView>